.large-8.columns
  - if notice
    .success.callout.small
      %p.text-center= notice

  .row
    .row-small-up-2.medium-up-4.large-up-4
      - cache ['products', Product.latest] do
        = render @products

.large-4.columns
  - if @cart
    #cart{style: @cart.line_items.empty? ? "display:none" : ""}
      = render @cart
