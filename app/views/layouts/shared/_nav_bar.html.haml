%nav.navigation
  .title-bar{"data-hide-for": "small", "data-responsive-toggle": "navbar"}
    %button.menu-icon{"data-toggle": "", type: "button"}
    .title-bar-title Menu
  #navbar.top-bar
    .top-bar-left
      %ul.menu{"data-responsive-menu": "accordion"}
        %li
          = link_to "MovieWorld", root_path, class:"menu-text"
        %li
          = link_to_if logged_in? && current_user.is_admin,
            "Create new product", new_product_path
    .top-bar-right
      %ul.menu
        - if logged_in?
          %li
            = link_to "Sign Out", logout_path, method: :delete
        - else
          %li
            = link_to "Sign Up", new_user_path
          %li
            = link_to "Sign In", login_path
