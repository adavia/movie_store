%h6.header Your movie cart

%table
  %thead
    = render @cart.line_items
    %tr
      %td Cart total
      %td= number_to_currency(@cart.total_price)

= link_to "Checkout", new_order_path, class: "success button float-left"

= link_to 'Empty cart', @cart, method: :delete,
  data: { confirm: 'Are you sure?' }, class: "alert button float-right"

